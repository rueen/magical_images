/**index.wxss**/
page{
  background-color: #585FCC;
}
.container{
  background-color: #fff;
  border-radius: 56rpx 56rpx 0rpx 0rpx;
  padding-top: 340rpx;
  padding-bottom: 80rpx;
  margin-top: 574rpx;
}
.line{
  height: 2rpx;
  background-color: #eee;
  width: 694rpx;
  margin-left: 28rpx;
}
.locationWrap{
  padding: 0 44rpx;
}
.choiceTitleWrap{
  padding: 32rpx 0;
}
.choiceTitle{
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  margin-left: 20rpx;
}
.locationList{
  display: flex;
  flex-wrap: wrap;
  margin-left: 38rpx;
}
.locationItem{
  width: 176rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  margin-bottom: 20rpx;
}
.locationItem.active{
  background-color: #585FCC;
}
.locationText{
  color: #585FCC;
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 16rpx;
}
.locationItem.active .locationText{
  color: #F5F5F5;
}
.styleWrap{
  padding-left: 44rpx;
}
.styleList{
  display: flex;
}
.styleItemWrap{
  width: 146rpx;
  height: 162rpx;
  border-radius: 72rpx 72rpx 24rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 4rpx solid #fff;
  margin-right: 20rpx;
}
.styleItemWrap.active{
  border: 4rpx solid #565FD3;
}
.styleItem{
  width: 130rpx;
  height: 146rpx;
  position: relative;
  box-sizing: border-box;
}
.defaultItem{
  background-color: #565FD3;
  border-radius: 72rpx 72rpx 20rpx 20rpx;
}
.defaultItem .styleItemDesc{
  bottom: 50%;
  margin-bottom: -34rpx;
}
.styleItemDesc{
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  position: absolute;
  left: 0; bottom: 0;
  width: 100%;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.styleItemBgWrap{
  width: 100%;
  height: 100%;
  border-radius: 72rpx 72rpx 20rpx 20rpx;
  overflow: hidden;
}
.styleItemBg{
  width: 100%;
  height: 100%;
}
.drawBtn{
  width: 662rpx;
  height: 80rpx;
  background: #2A3243;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  margin: 80rpx 44rpx 0 44rpx;
}
/* 绘图区域 */
.drawContainer{
  width: 750rpx;
  height: 888rpx;
  position: absolute;
}
.drawBg{
  width: 662rpx;
  height: 840rpx;
  position: absolute;
  z-index: 1;
  top: 35rpx;
  left: 50%;
  margin-left: -331rpx;
}
.drawBgItem{
  width: 662rpx;
  height: 840rpx;
  border-radius: 50rpx;
  position: absolute;
  left: 0; top: 0;
}
.drawBgItem1{
  background-color: #FFF8F4;
  z-index: 2;
}
.drawBgItem2{
  background-color: #EEE0D6;
  z-index: 1;
  transform: rotate(-3deg);
}
.drawContent{
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.drawTab{
  width: 584rpx;
  height: 64rpx;
  border: 2rpx solid rgba(237,116,71,0.4);
  border-radius: 16rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  margin-top: 60rpx;
  box-sizing: border-box;
}
.drawTabItem{
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #999;
  font-weight: 400;
  display: flex;
  justify-content: center;
  align-items: center;
}
.drawTabItem.active{
  height: 64rpx;
  background-color: #ED7447;
  border-radius: 16rpx;
  color: #fff;
  font-weight: 500;
}
.drawTabItem1.active{
  margin-left: -1rpx;
}
.drawTabItem2.active{
  margin-right: -1rpx;
}
.drawPreviewWrap{
  width: 586rpx;
  height: 532rpx;
  border-radius: 50rpx;
  overflow: hidden;
  margin-top: 24rpx;
  position: relative;
}
.drawPreview{
  width: 586rpx;
  height: 532rpx;
}
.drawPreviewText{
  position: absolute;
  left: 38rpx;
  bottom: 24rpx;
}
.drawPreviewText1{
  font-size: 34rpx;
  font-weight: 500;
  color: #fff;
}
.drawPreviewText2{
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
}
.drawUploadBtn{
  width: 424rpx;
  height: 76rpx;
  background-color: #ED7447;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 28rpx;
}
.drawUploadBtnText{
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  margin-left: 20rpx;
}