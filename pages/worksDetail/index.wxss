/* pages/worksDetail/index.wxss */
page{
  background-color: #FEF2DB;
}
.container{
  background-color: #fff;
  border-radius: 56rpx 56rpx 0rpx 0rpx;
  padding: 44rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}
.posterPreview{
  width: 662rpx;
  height: 840rpx;
  border-radius: 50rpx;
  overflow: hidden;
}
.poster{
  width: 662rpx;
  height: 840rpx;
}
.locationList{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 40rpx;
}
.locationItem{
  width: 176rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  margin-bottom: 20rpx;
}
.locationText{
  color: #585FCC;
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 16rpx;
}
.btnBox{
  margin-top: 78rpx;
}
.btnShare{
  width: 100%;
  height: 80rpx;
  background-color: #2A3243;
  font-size: 34rpx;
  color: #fff;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
}
.btnDownload{
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #2A3243;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 22rpx;
}