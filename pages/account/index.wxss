/* pages/account/index.wxss */
page{
  background-color: #4A6BA6;
}
.container{
  background-color: #fff;
  border-radius: 56rpx 56rpx 0rpx 0rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 76rpx;
}
.userInfo{
  display: flex;
  align-items: center;
}
.avatarWrap{
  width: 116rpx;
  height: 116rpx;
  border-radius: 24rpx;
  background: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}
.avatar{
  width: 116rpx;
  height: 116rpx;
  border-radius: 24rpx;
}
.nicknameWrap{
  padding-left: 24rpx;
}
.nickname{
  font-size: 34rpx;
  font-weight: 500;
  color: #5086ED;
  height: 48rpx;
  line-height: 48rpx;
  display: flex;
  align-items: flex-start;
}
.nicknameText{
    margin-right: 10rpx;
}
.nicknameDesc{
  font-size: 24rpx;
  font-weight: 400;
  color: #CCCCCC;
  line-height: 36rpx;
  margin-top: 4rpx;
}
.times{
  margin-top: 40rpx;
  width: 596rpx;
  height: 220rpx;
  background: #F9F9F9;
  border-radius: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.timesText1{
  font-size: 28rpx;
  font-weight: 500;
  color: #2A3243;
  line-height: 40rpx;
}
.timesText2{
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 36rpx;
  margin-top: 8rpx;
}
.shareBtn{
  margin-top: 20rpx;
  width: 424rpx;
}